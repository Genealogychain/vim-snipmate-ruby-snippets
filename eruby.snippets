# Eruby

snippet each
	<% ${1:collection}.each do |${2:member}| %>
		${3}
	<% end %>
snippet h
	<%=h ${1} %>
snippet =
	<%= ${1} %>
snippet -
	<% ${1} %>
snippet rendp
	<%= render :partial => '${1}' %>
snippet rendc
	<%= render :partial => @${1} %>
snippet lt
	<%= link_to '${1:caption}>', ${2}> %>

snippet if
	<% if ${1:cond} %>
		${2}	
	<% end %>

snippet unless
	<% unless ${1:cond} %>
		${2}	
	<% end %>

snippet yield
	<%= yield :${1:partial} %>

snippet ff
	<% form_for(@${1:model}) do |f| %>
		<%= f.error_messages %>
		<%= f.submit "${2:button}" %>
	<% end %>

snippet =jsit
	<%= javascript_include_tag('${1:javascript_filename}') %>

snippet =sslt
	<%= stylesheet_link_tag "${1:stylesheet_filename}" %>
